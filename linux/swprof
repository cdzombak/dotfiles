# shellcheck shell=bash

function profile_desktop() {
  [ -e "$HOME/.dotfiles/config/sw-profile-desktop" ]
}
function profile_home_server() {
  [ -e "$HOME/.dotfiles/config/sw-profile-home-server" ]
}
function profile_public_server() {
  [ -e "$HOME/.dotfiles/config/sw-profile-public-server" ]
}
function profile_server() {
  profile_home_server || profile_public_server
}

if ! profile_desktop && ! profile_server; then
  echo "Please set a software profile by running one of:"
  echo "  touch ~/.dotfiles/config/sw-profile-desktop"
  echo "  touch ~/.dotfiles/config/sw-profile-home-server"
  echo "  touch ~/.dotfiles/config/sw-profile-public-server"
  echo "Then re-run this script."
  exit 1
fi

function is_raspbian() {
  lsb_release -d | grep -c "Raspbian" >/dev/null
}
